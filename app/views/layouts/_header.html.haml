.border

%header
	.headline.center
		%i.fa.fa-diamond
		- if @index
			%h1 Woppie
		- else
			%h1
				=yield(:title)

		%h5 Blog & Portfolio Page

%nav
	.container
		%ul.left
			%li
				= link_to 'Home', root_path
			%li
				= link_to 'About', welcome_about_path
			%li
				= link_to 'Projects', "#"
			%li
				= link_to 'Blog', posts_path
			%li
				= link_to 'Contact', welcome_contact_path

		%ul.right
			%li
				= link_to "http://facebook.com" do
					%i.fa.fa-facebook
			%li
				= link_to "http://twitter.com" do
					%i.fa.fa-twitter
			%li
				= link_to "http://plus.google.com" do
					%i.fa.fa-google-plus
			%li
				= link_to "http://instagram.com" do
					%i.fa.fa-instagram
			%li
				= link_to "http://pinterest.com" do
					%i.fa.fa-pinterest
			%li
				= link_to "", id: "search" do
					%i.fa.fa-search
			%li
				= render "layouts/search_form"